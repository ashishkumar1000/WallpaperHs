<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wallpaperhs">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.AppUtils"
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:largeHeap="true"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity android:name="com.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.SimpleSampleActivity" />

        <activity android:name="com.ViewPagerActivity" />

        <activity android:name="com.RotationSampleActivity" />

        <activity android:name="com.PicassoSampleActivity" />

        <activity android:name="com.ActivityTransitionActivity" />

        <activity android:name="com.ActivityTransitionToActivity" />
    </application>

</manifest>